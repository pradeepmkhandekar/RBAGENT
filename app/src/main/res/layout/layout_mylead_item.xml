<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llsmsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:alpha=".8"
    android:background="@android:color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="100">


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ll_followup_name_status_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="0dp"
                        android:paddingLeft="2dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Mobile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtMobileNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Status"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Product"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProdType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Loan Amt"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtLoanAmnt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Assignee"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAssignee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="left"
                        android:text="Remark"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/application_secondary_text_color" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text=":"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRemark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="70"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/application_primary_text_color" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/callImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/callingicon" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
