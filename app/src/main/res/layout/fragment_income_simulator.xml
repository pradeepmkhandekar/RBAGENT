<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.rupeeboss.rba.incomeSimulator.fragment.IncomeSimulatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_income"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Find out your potential earning based on your Socialization..!!"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/back_button_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Number of Contacts to Explore:  "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#c2da6b"
                android:textSize="28sp" />


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/svParent"
        style="@style/styleScrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="10dp">


                    <EditText
                        android:id="@+id/etMedia"
                        style="@style/styleEditCurve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="No Of Social media Contacts "
                        android:inputType="phone"
                        android:maxLength="4"
                        android:maxLines="2"
                        android:textColor="@color/darkBlue"

                        android:textStyle="normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/social_media" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkGrey" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:text="5k"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkGrey" />


                </RelativeLayout>


                <SeekBar
                    android:id="@+id/skMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/green1_descent"
                    android:thumbTint="@color/green"

                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtHdr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red_descent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="No Of Social media Contacts "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!--android:thumbTintMode="multiply"-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyFlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="5k"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skFlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/green1_descent"
                        android:thumbTint="@color/green"
                        android:visibility="gone" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/etFlate"
                        style="@style/styleEditCurve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"

                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="No of Flats in Your Society &amp;  Nearby Societies"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:maxLines="2"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/society_flats" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txtHdr3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red_descent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="No of Flats in Your Society &amp;  Nearby Societies"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lyWorkSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="20k"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skWorkSpace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/green1_descent"
                        android:thumbTint="@color/green"
                        android:visibility="gone" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">


                    <EditText
                        android:id="@+id/etWorkSpace"
                        style="@style/styleEditCurve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"

                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Workplace Contacts"
                        android:inputType="phone"
                        android:maxLength="5"
                        android:maxLines="2"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/workplace" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txtHdr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red_descent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Workplace Contacts"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>





            <LinearLayout
                android:id="@+id/lyPhoneBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtDispalayMinTenureYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView
                            android:id="@+id/txtDispalayMaxTenureYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="1k"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skPhBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/green1_descent"
                        android:thumbTint="@color/green"
                        android:visibility="gone" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/styleEditCurve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Phone Book Contact"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:maxLines="2"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/phone_books_contact" />


                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <TextView
                    android:id="@+id/txtHdr4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red_descent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Phone Book Contacts"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <TextView
                        android:id="@+id/txtHdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/lightblue"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="YOUR POTENTIAL CLIENT BASE "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/PtSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="8dp"
                        android:checked="false"
                        android:switchMinWidth="40dp"
                        android:textColor="@color/white"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/RyPot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="2dp">

                    <EditText
                        android:id="@+id/etPtClient"
                        style="@style/styleEditCurve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="12dp"

                        android:layout_marginTop="5dp"
                        android:layout_marginRight="12dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 100000"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:textColor="@color/darkBlue" />

                    <RelativeLayout
                        android:id="@+id/rlPt"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPtClient"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="1lac"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skPtClient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlPt"
                        android:max="100"
                        android:paddingBottom="5dp"
                        android:progress="0"
                        android:progressTint="@color/green1_descent"
                        android:thumbTint="@color/green"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/phone_books_contact" />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
