<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_gray"
    android:orientation="vertical"
    tools:context="com.rupeeboss.rba.incomeSimulator.fragment.IncomeSimulatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/back_button_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_income"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Find out your potential earning based on your Socialization..!!"
            android:textColor="@color/white" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/svParent"
        style="@style/styleScrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/lyMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/txtHdr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red_descent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="No Of Social media Contacts "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/etMedia"
                        style="@style/styleEditSmallText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 5000"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="5k"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skMedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:thumbTint="@color/green"
                        android:progressTint="@color/green1_descent" />

                    <!--android:thumbTintMode="multiply"-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/lyWorkSpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/txtHdr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red_descent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Workplace Contacts"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etWorkSpace"
                        style="@style/styleEditSmallText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 20000"
                        android:inputType="phone"
                        android:maxLength="5"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="5dp"
                                android:text="0"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="5dp"
                                android:text="20k"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/skWorkSpace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="0"
                            android:thumbTint="@color/green"
                            android:progressTint="@color/green1_descent"
                            />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/lyFlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/txtHdr3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red_descent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="No of Flats in Your Society &amp;  Nearby Societies"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/etFlate"
                        style="@style/styleEditSmallText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 5000"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:paddingTop="5dp">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:paddingLeft="5dp"
                                android:text="0"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="5dp"
                                android:text="5k"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/skFlate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="0"
                            android:thumbTint="@color/green"
                            android:progressTint="@color/green1_descent" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/lyPhoneBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/txtHdr4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red_descent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Phone Book Contacts"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/styleEditSmallText"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 1000"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:textColor="@color/darkBlue"
                        android:textStyle="normal" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtDispalayMinTenureYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="5dp"
                                android:text="0"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                            <TextView
                                android:id="@+id/txtDispalayMaxTenureYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="5dp"
                                android:text="1k"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/darkGrey" />


                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/skPhBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="0"
                            android:thumbTint="@color/green"
                            android:progressTint="@color/green1_descent" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="8dp">


                <RelativeLayout
                    android:id="@+id/RyPot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/txtHdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignLeft="@+id/PtSwitch"
                        android:background="@color/green_descent"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="YOUR POTENTIAL CLIENT BASE "
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/PtSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="5dp"
                        android:checked="false"
                        android:track="@drawable/switch_track_selector"
                        android:switchMinWidth="40dp"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etPtClient"
                        style="@style/styleEditSmallText"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtHdr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Max 100000"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:textColor="@color/darkBlue" />


                    <RelativeLayout
                        android:id="@+id/rlPt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPtClient">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="5dp"
                            android:text="1lac"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/darkGrey" />


                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/skPtClient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlPt"
                        android:max="100"
                        android:paddingBottom="5dp"
                        android:progress="0"
                        android:thumbTint="@color/green"
                        android:progressTint="@color/green1_descent" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/back_button_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Number of Contacts to Explore:  "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#c2da6b"
                android:textSize="28sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
